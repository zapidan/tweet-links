<div class="jumbotron text-center">
  <h1>Tweet Links</h1>
  <p class="lead">
    <%= image_tag "twitter.png" %><br>
    Log in to be able to post, vote and add comments
    <p><a class="btn btn-lg btn-success" ng-href="#/register">Register<span class="glyphicon glyphicon-ok"></span></a></p>
  </p>
</div>

    
<div class="page-header">
  <h1>Tweet Links Posts</h1>
</div>

<div ng-repeat="post in posts | orderBy: '-upvotes'" class="posts">
  <span class="glyphicon glyphicon-thumbs-up" ng-show="signedIn()" ng-click="incrementUpvotes(post)"></span>
  <span style="font-size:20px; margin-left:10px;">
    <a ng-show="post.link" ng-href="{{post.link | urlFilter}}">
      {{post.title}} 
    </a>
    <span ng-hide="post.link">
      {{post.title}}
    </span>
    - upvotes {{post.upvotes}}
    <span>posted by <i>{{post.user.username}}</i></span>
  </span>
  <span class="glyphicon glyphicon-thumbs-down" ng-show="signedIn()" ng-click="decrementUpvotes(post)"></span>
  <span>
    <a ng-href="#/posts/{{post.id}}">Comments</a>
  </span>
</div>
<form ng-show="signedIn()" ng-submit="addPost()">
  <input type="text" placeholder="Title" ng-model="title"></input>
  <input type="text" placeholder="Link" ng-model="link"></input>
  <button type="submit">Post</button>
</form>