<div class="jumbotron">
  <h1>'Allo, 'Allo!</h1>
  <p class="lead">
    <%= image_tag "yeoman.png" %><br>
    Always a pleasure scaffolding your apps.
  </p>
  <p><a class="btn btn-lg btn-success" ng-href="#/">Splendid!<span class="glyphicon glyphicon-ok"></span></a></p>
</div>

<div class="row marketing">
  <div class="col-md-6 col-md-offset-3">
    
    <div class="page-header">
      <h1>Flapper News</h1>
    </div>
  
    <div ng-repeat="post in posts | orderBy: '-upvotes'">
      <span class="glyphicon glyphicon-thumbs-up" ng-show="signedIn()" ng-click="incrementUpvotes(post)"></span>
      <span style="font-size:20px; margin-left:10px;">
        <a ng-show="post.link" href="{{post.link}}">
          {{post.title}} 
        </a>
        <span ng-hide="post.link">
          {{post.title}}
        </span>
        - upvotes {{post.upvotes}}
        <span>posted by <a ng-href="#/users/{{post.user.username}}">{{post.user.username}}</a></span>
      </span>
      <span class="glyphicon glyphicon-thumbs-down" ng-show="signedIn()" ng-click="decrementUpvotes(post)"></span>
      <span>
        <a href="#/posts/{{post.id}}">Comments</a>
      </span>
    </div>
    <form ng-show="signedIn()" ng-submit="addPost()">
      <input type="text" placeholder="Title" ng-model="title"></input>
      <input type="text" placeholder="Link" ng-model="link"></input>
      <button type="submit">Post</button>
    </form>
  </div>
</div>